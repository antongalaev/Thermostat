<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.galaev.thermostat"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />

    <application
        android:name=".ThermostatApp"
        android:allowBackup="true"
        android:icon="@drawable/thermometer"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".activities.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.WeekOverview"
            android:label="@string/week_overview"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".activities.Settings"
            android:label="@string/settings"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".activities.DaySwitches"
            android:label="Day Switches"
            android:screenOrientation="portrait"/>
    </application>

</manifest>